pipeline {
  agent any
  environment {
    work_dir='env/dev/'
  }
  options {
    skipDefaultCheckout(true)
  }
  stages{
    stage('clean workspace') {
      steps {
        cleanWs()
      }
    }
    stage('checkout') {
      steps {
        checkout scm
      }
    }
    stage("terraform init") {
      steps {
        withCredentials(
          [[
            $class: 'AmazonWebServicesCredentialsBinding',
            credentialsId: 'koichi',
            accessKeyVariable: 'AWS_ACCESS_KEY_ID',
            secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
          ]]
        ) {
          sh '''
          cd env/dev/;terraform init -no-color
          '''
        }
      }
    }
    stage("terraform plan") {
      steps {
        withCredentials(
          [[
            $class: 'AmazonWebServicesCredentialsBinding',
            credentialsId: 'koichi',
            accessKeyVariable: 'AWS_ACCESS_KEY_ID',
            secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
          ]]
        ) {
          sh '''
          cd env/dev/;terraform plan -no-color
          '''
        }
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}